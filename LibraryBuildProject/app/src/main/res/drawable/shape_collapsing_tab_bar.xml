<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:state_selected="false"
		android:color="@color/collapsing_tab_bar_bg_secondary">
		<shape android:shape="rectangle">

			<corners android:radius="@dimen/global_spacing_28" />

			<solid android:color="@color/collapsing_tab_bar_bg_primary" />

			<stroke
				android:width="1dp"
				android:color="@color/collapsing_tab_bar_bg_secondary" />
		</shape>
	</item>

	<item
		android:state_selected="true"
		android:color="@color/collapsing_tab_bar_bg_primary">
		<shape android:shape="rectangle">

			<corners android:radius="@dimen/global_spacing_28" />

			<solid android:color="@color/collapsing_tab_bar_bg_secondary" />

			<stroke
				android:width="1dp"
				android:color="@color/collapsing_tab_bar_bg_secondary" />
		</shape>
	</item>
</selector>